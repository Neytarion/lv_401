pipeline {
    agent any
    stages {
        stage('Creating tomcat node') {
            steps {
                build job: 'tomcat'
            }
        }
        stage('Creating database node') {
            steps {
                build job: 'build_db'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}